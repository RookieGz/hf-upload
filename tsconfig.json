{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["./lib/*", "./node_modules/@types", "./typings"],
  "exclude": ["./node_modules"]
}
